<div class="page-header">
  <div class="pull-right">
    <%= link_to "Edit Person", edit_person_path(@person), class: "pull-right btn btn-info" %>
  </div>
  <h1><%= @person.title %> <%= @person.first_name %> <%= @person.last_name %></h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Location</th>
    <th>Role<div class="pull-right"><%= link_to '+ Add Location', new_person_assignment_path(@person) %></div></th>
  </tr>
  </thead>
  <tbody>
  <% @assignments.each do |assignment| %>
    <tr>
      <td><%= assignment.location.name %></td>
      <td><%= assignment.role %>
        <div class="pull-right">
          <%= link_to 'Edit', edit_person_assignment_path(@person, assignment), :class => "btn btn-info" %>
          <%= link_to 'Delete', person_assignment_path(@person, assignment), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
