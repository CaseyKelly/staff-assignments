<div class="page-header">
  <h1>Assign <%= @person.full_name %> to a location</h1>
</div>

<%= form_for [@person, @assignment], html: {:class => "form-horizontal"} do |f|  %>
    <div class="form-group">
      <div class="field">
        <%= f.label :location_id, :class => 'control-label col-md-2' %>
      </div>
      <div class='form-controls col-md-4'>
        <%= f.collection_select :location_id, Location.all, :id, :name, {:prompt => 'Please select a location...'}, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :role, :class => 'control-label col-md-2' %>
      </div>
      <div class="form-controls col-md-4">
        <%= f.text_field :role, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-4">
        <%= f.submit 'Assign', :class => 'btn btn-primary'%>
      </div>
    </div>

<% end %>
